@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700&display=swap');

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Poppins', sans-serif;
}

html {
  font-size: 62.5%;
}

body {
  background: #f5f5f5;
}

.invalid-feedback {
  display: none;
}

.container {
  width: 60rem;
  border: 1px solid black;
  padding: 3rem;
  margin: 3rem auto;
  border-radius: 0.5rem;
  background: #fff;
}

.container label {
  font-size: 1.4rem;
  font-weight: 500;
  padding: 1rem;
  margin: 1rem;

}

.container input {
  font-size: 1.4rem;
  margin: 1rem;
  font-weight: 500;
  padding: 1rem;
  border-radius: 0.5rem;
  border: 1px solid #ccc;

}

.container #btnInserir {
  background: rgb(53, 46, 255);
  font-size: 1.5rem;
  width: 10rem;
  height: 4rem;
  font-weight: 600;
  color: #fff;
  border: none;
  border-radius: 0.5rem;
  cursor: pointer;
  transition: 0.3s;
}

.container #btnInserir:hover {
  background: rgb(53, 46, 255);
  opacity: 0.8;


}

.container .form-row {
  display: grid;
  grid-template-columns: 10rem 1fr;
  gap: 1rem;
  align-items: center;

}



.table {
  width: 60rem;
  border-collapse: collapse;
  margin: 3rem auto;
  background: #fff;
  border-radius: 0.5rem;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
  border: .1rem solid black;
  height: 20rem;
  overflow: auto;
  padding: 1rem;
}

.table table {
  width: 100%;
  height: 100%;
  font-size: 1.3rem;

}